{{if data.failTime}}
<div class='notice'>
	<b><h3>СИСТЕМНАЯ ОШИБКА</h3></b>
	<i>Обнаружена неисправность регуляторов ввода-вывода! Ожидание перезагрузки системы...</i><br>
	Автоматическая перезагрузка через {{:data.failTime}} секунд...
	{{:helper.link('Перезагрузить', 'refresh', {'reboot' : 1})}}<br><br><br>
</div>
{{else}}
<div class='notice'>
	{{if data.siliconUser}}
		<div class="itemContentSmall">
			Интерфей:
		</div>
		<div class="itemContentFull">
			{{:helper.link('Закрыт', 'locked', {'toggleaccess' : 1}, data.locked ? 'selected' : null)}}{{:helper.link('Открыт', 'unlocked', {'toggleaccess' : 1}, data.malfStatus >= 2 ? 'linkOff' : (data.locked ? null : 'selected'))}}
		</div>
		<div class="clearBoth"></div>
	{{else}}
		{{if data.locked}}
			Проведите ID картой, чтобы разблокировать интерфейс
		{{else}}
			Проведите ID картой, чтобы заблокировать интерфейс
		{{/if}}
	{{/if}}
</div>

<div style="min-width: 480px">

	<h3>Статус питания</h3>

	<div class="item">
		<div class="itemLabel">
			Питание отсека:
		</div>
		<div class="itemContent">
			{{if data.locked && !data.siliconUser}}
				{{if data.isOperating}}
					<span class='good'>Вкл</span>
				{{else}}
					<span class='bad'>Выкл</span>
				{{/if}}
			{{else}}
				{{:helper.link('Вкл', 'power', {'breaker' : 1}, data.isOperating ? 'selected' : null)}}{{:helper.link('Выкл', 'close', {'breaker' : 1}, data.isOperating ? null : 'selected')}}
			{{/if}}
		</div>
	</div>

	<div class="item">
		<div class="itemLabel">
			Внешний источник:
		</div>
		<div class="itemContent">
			{{if data.externalPower == 2}}
				<span class='good'>Оптимально</span>
			{{else data.externalPower == 1}}
				<span class='average'>Слабый</span>
			{{else}}
				<span class='bad'>НЕТ</span>
			{{/if}}
		</div>
	</div>

	<div class="item">
		<div class="itemLabel">
			Энергоячейка:
		</div>
		{{if data.powerCellStatus == null}}
			<div class="itemContent bad">		
				Энергоячейка удалена.
			</div>
		{{else}}
			<div class="itemContent">
			{{:helper.displayBar(data.powerCellStatus, 0, 100, (data.powerCellStatus >= 50) ? 'good' : (data.powerCellStatus >= 25) ? 'average' : 'bad', helper.round(data.powerCellStatus*10)/10 + "%" )}}
			</div>
			<br>
		{{/if}}
	</div>

	{{if data.powerCellStatus != null}}
		<div class="item">
			<div class="itemLabel">
				Режим заряда:
			</div>
			<div class="itemContent">
				{{if data.locked && !data.siliconUser}}
					{{if data.chargeMode}}
						<span class='good'>Авто</span>
					{{else}}
						<span class='bad'>Выкл</span>
					{{/if}}				
				{{else}}
					{{:helper.link('Авто', 'refresh', {'cmode' : 1}, data.chargeMode ? 'selected' : null)}}{{:helper.link('Выкл', 'close', {'cmode' : 1}, data.chargeMode ? null : 'selected')}}
				{{/if}}
				&nbsp;
				{{if data.chargingStatus > 1}}
					[<span class='good'>Полный заряд</span>]
				{{else data.chargingStatus == 1}}
					[<span class='average'>Заряжается...</span>]
				{{else}}
					[<span class='bad'>Не заряжается</span>]
				{{/if}}
			</div>
		</div>
	{{/if}}


	<h3>Энерголиния</h3>

	{{for data.powerChannels}}
		<div class="item">
			<div class="itemLabel">
				{{:value.title}}:
			</div>
			<div class="itemContent" style="width: 50px; text-align: right">
				{{:value.powerLoad}}&nbsp;W
			</div>
			<div class="itemContent" style="width: 95px">
				&nbsp;&nbsp;
				{{if value.status <= 1}}
					<span class='bad'>Выкл</span>
				{{else value.status >= 2}}
					<span class='good'>Вкл</span>
				{{/if}}
				{{if data.locked}}
					{{if value.status == 1 || value.status == 3}}
						&nbsp;&nbsp;Auto
					{{else}}
						&nbsp;&nbsp;Manual
					{{/if}}		
				{{/if}}
			</div>
			{{if !data.locked || data.siliconUser}}
				<div class="itemContentFull">
					{{:helper.link('Авто', 'refresh', value.topicParams.auto, (value.status == 1 || value.status == 3) ? 'selected' : null)}}
					{{:helper.link('Вкл', 'power', value.topicParams.on, (value.status == 2) ? 'selected' : null)}}
					{{:helper.link('Выкл', 'close', value.topicParams.off, (value.status == 0) ? 'selected' : null)}}
				</div>
			{{/if}}
		</div>
	{{/for}}

	<div class="item" style="font-weight: bold">
		<div class="itemLabel">
			Общая нагрузка:
		</div>
		<div class="itemContent">
			{{if data.totalCharging}}
				{{:data.totalLoad}}W (+ {{:data.totalCharging}}W Charging)
			{{else}}
				{{:data.totalLoad}}W
			{{/if}}
		</div>
	</div>

	<div class="item">&nbsp;</div>

	<div class="item">
		<div class="itemLabel">
			Замок Крышки:
		</div>
		<div class="itemContent">
			{{if data.locked && !data.siliconUser}}
				{{if data.coverLocked}}
					<span class='good'>Engaged</span>
				{{else}}
					<span class='bad'>Disengaged</span>
				{{/if}}
			{{else}}
				{{:helper.link('Закрыт', 'locked', {'lock' : 1}, data.coverLocked ? 'selected' : null)}}{{:helper.link('Открыт', 'unlocked', {'lock' : 1}, data.coverLocked ? null : 'selected')}}
			{{/if}}
		</div>
	</div>

	{{if data.siliconUser}}
		<h3>Системные перегрузки</h3>

		<div class="item">
			{{:helper.link('Перегрузка освещения', 'lightbulb', {'overload' : 1})}}
			{{if data.malfStatus == 1}}
				{{:helper.link('Перегрузка программ', 'script', {'malfhack' : 1})}}
			{{else data.malfStatus > 1}}
				<div class='notice'>APC Взломан/div>
			{{/if}}
		</div>
	{{/if}}

</div>
{{/if}}