<div class="display">
	<header><h3>Воздух</h3></header>
	<article>
	{{if data.has_environment}}
		{{for data.environment}}
		<section>
			<span class="label">{{:value.name.toTitleCase()}}:</span>
			<div class="content">
				{{if value.danger_level == 2}}
				<span class='bad'>
				{{else value.danger_level == 1}}
				<span class='average'>
				{{else}}
				<span class='good'>
				{{/if}}
				{{:helper.fixed(value.value, 1)}}
				</span>{{:value.unit}}
			</div>
		</section>
		{{/for}}
		<section>
			<span class="label">Местный Статус:</span>
			<div class="content">
			{{if data.total_danger == 2}}
				<span class='bad'>ОПАСНОСТЬ: Требуется кислородное оборудование</span>
			{{else data.total_danger == 1}}
				<span class='average'>Внимание</span>
			{{else}}
				<span class='good'>Оптимум</span>
			{{/if}}
			</div>
		</section>
		<section>
			<span class="label">Статус отсека:</span>
			<div class="content">
		    {{if data.atmos_alarm}}
				<span class='bad'>Предупреждение: Атмосфера</span>
			{{else data.fire_alarm}}
				<span class='bad'>Предупреждение: Пожар</span>
			{{else}}
				Все в норме
			{{/if}}
			</div>
		</section>
	{{else}}
		<span class='bad'>Предупреждение: невозможно получить пробу воздуха для анализа.</span>
	{{/if}}
	<article>
</div>

<table width="100%">
    <tr>
        <td>
            <tr>
                <td><H3>Внешний контроль</H3></td>
                <td><H3>Термостат</H3></td>
            </tr>
        </td>
        <td>
            <tr>
                <td>
                    <div class="item">
                        <div class="itemContent" style="width: 100%;">	
                            {{:helper.link('Выкл',	null, { 'rcon' : 1}, data.remote_connection && !data.remote_access ? (data.rcon == 1 ? 'yellowButton' : 'disabled') : null, data.rcon == 1 ? 'selected' : null)}}
                            {{:helper.link('Авто',	null, { 'rcon' : 2}, data.remote_connection && !data.remote_access ? (data.rcon == 2 ? 'yellowButton' : 'disabled') : null, data.rcon == 2 ? 'selected' : null)}}
                            {{:helper.link('Вкл',	null, { 'rcon' : 3}, data.remote_connection && !data.remote_access ? (data.rcon == 3 ? 'yellowButton' : 'disabled') : null, data.rcon == 3 ? 'selected' : null)}}
                        </div>
                    </div>
                </td>
                <td>
                    {{:helper.link(data.target_temperature, null, { 'temperature' : 1})}}
                </td>
            </tr>
        </td>
    </tr>
</table>

{{if (data.locked && !data.remote_connection) || (data.remote_connection && !data.remote_access)}}
<div class='notice'><span class='noticePlaceholder'>
	{{if data.remote_connection}}
		Доступ ограничен: Текущие настройки пульта внешнего управления и состояние сигнализации заблокированы
	{{else}}
		Проведите ID картой, чтобы разблокировать интерфейс
	{{/if}}
</span></div>
{{else}}
	<HR>
    {{if data.screen != 1}}
        <div class="item">{{:helper.link('Главное Меню', null, { 'screen' : 1})}}</div>
    {{/if}}
    {{if data.screen == 1}}
        <div class="item">
            {{if data.atmos_alarm}}
                {{:helper.link('Сброс - Атмосферная Сигнализация', null, { 'atmos_reset' : 1})}}
            {{else}}
                {{:helper.link('Активировать - Атмосферная Сигнализация', null, { 'atmos_alarm' : 1})}}
            {{/if}}
        </div>
        <hr>
            <div class="item">
                {{:helper.link('Газоочиститель', null, { 'screen' : 3})}}
            </div>
            <div class="item">
                {{:helper.link('Вентиляция', null, { 'screen' : 2})}}
            </div>
            <div class="item">
                {{:helper.link('Режим среды', null, { 'screen' : 4})}}
            </div>
            <div class="item">
                {{:helper.link('Настройки сенсоров', null, { 'screen' : 5})}}
            </div>
        <hr>
            {{if data.mode==3}}
                {{:helper.link('Режим паники выкл', null, { 'mode' : 1}, null, 'redButton')}}
			{{else}}
                {{:helper.link('Режим паники вкл', null, { 'mode' : 3}, null, 'yellowButton')}}
            {{/if}}
    {{else data.screen == 2}}
		{{for data.vents}}
			<div class="item">
			{{:value.long_name}}</div>
			<div class="item">
				<div class="itemLabel">Работает:</div>
				<div class="itemContent">
					{{:helper.link(value.power ? 'Да' : 'Нет', null, { 'id_tag' : value.id_tag, 'command' : 'power', 'val' : value.power ? 0 : 1}, null, value.power ? null : 'redButton')}}
				</div>
			</div>
			<div class="item">
				<div class="itemLabel">Режим работы:</div>
				<div class="itemContent">
					{{:value.direction == "siphon" ? 'Выдув' : 'Вдув'}}
				</div>
			</div>
			<div class="item">
				<div class="itemLabel">Радиус:</div>
				<div class="itemContent">
					{{:helper.link(value.expanded_range ? "Расширенный" : "Нормальный", null, { 'id_tag' : value.id_tag, 'command' : 'toggle_expanded_range', 'val' : 1}, null, value.expanded_range ? 'redButton' : null)}}
				</div>
			</div>
			<div class="item">
				<div class="itemLabel">Проверка давления:</div>
				<div class="itemContent">
					{{:helper.link('Внешняя', null, { 'id_tag' : value.id_tag, 'command' : 'checks', 'val' : value.checks^1}, null, value.checks&1 ? 'selected' : null)}}
					{{:helper.link('Внутренняя', null, { 'id_tag' : value.id_tag, 'command' : 'checks', 'val' : value.checks^2}, null, value.checks&2 ? 'selected' : null)}}
				</div>
			</div>
			<div class="item">
				<div class="itemLabel">Связ. Внеш. Давление:</div>
				<div class="itemContent">
					{{:helper.link(helper.fixed(value.external,2), null, { 'id_tag' : value.id_tag, 'command' : 'set_external_pressure'})}}
					{{:helper.link('Сброс', null, { 'id_tag' : value.id_tag, 'command' : 'reset_external_pressure'})}}
				</div>
			</div>			
			<HR>
		{{empty}}
			Вентиляция не подключена.
		{{/for}}
    {{else data.screen == 3}}
		{{for data.scrubbers}}
			<div class="item">
			{{:value.long_name}}</div>
			<div class="item">
				<div class="itemLabel">Работает:</div>
				<div class="itemContent">
					{{:helper.link(value.power ? 'Да' : 'Нет', null, { 'id_tag' : value.id_tag, 'command' : 'power', 'val' : value.power ? 0 : 1}, null, value.power ? null : 'redButton')}}
				</div>
			</div>
			<div class="item">
				<div class="itemLabel">Режим работы:</div>
				<div class="itemContent">
					{{:helper.link(value.scrubbing ? 'Выдув' : 'Вдув', null, { 'id_tag' : value.id_tag, 'command' : 'scrubbing', 'val' : value.scrubbing ? 0 : 1}, null, value.scrubbing ? null : 'redButton')}}
				</div>
			</div>
			<div class="item">
				<div class="itemLabel">Радиус:</div>
				<div class="itemContent">
					{{:helper.link(value.expanded_range ? "Расширенный" : "Нормальный", null, { 'id_tag' : value.id_tag, 'command' : 'toggle_expanded_range', 'val' : 1}, null, value.expanded_range ? 'redButton' : null)}}
				</div>
			</div>
			<div class="item">
				<div class="itemLabel">Фильтрация:</div>
				<div class="itemContent">
					{{for value.filters :filterValue:filterIndex}}
						{{:helper.link(filterValue.name, null, { 'id_tag' : value.id_tag, 'command' : filterValue.command, 'val' : filterValue.val ? 0 : 1}, null, filterValue.val ? 'selected' : null)}}
					{{/for}}
				</div>
			</div>
			<HR>
		{{empty}}
			Газоочиститель не подключен.
		{{/for}}
    {{else data.screen == 4}}
		<H3>Режим среды</H3>
		{{for data.modes}}
			<div class="item">
				{{:helper.link(value.name, null, { 'mode' : value.mode }, null, value.selected ? (value.danger ? 'redButton' : 'selected') : null)}}
			</div>
		{{/for}}
    {{else data.screen == 5}}
		<H3>Порог Сигнала Тревоги </H3>
		Парциальное давление газов.
		<table class='fixed'>
		<tr>
			<td></td><td><span class='bad'>Мин2</span></td><td><span class='average'>Мин1</span></td><td><span class='average'>Макс1</span></td><td><span class='bad'>Макс2</span></td>
		</tr>
		{{for data.thresholds}}
			<tr>
				<td>{{:value.name}}</td>
				{{for value.settings :settingsValue:settingsIndex}}
					<td>
						{{:helper.link(settingsValue.selected >= 0 ? helper.fixed(settingsValue.selected, 2) : "Выкл", null, { 'command' : 'set_threshold', 'env' : settingsValue.env, 'var' : settingsValue.val })}}
					</td>
				{{/for}}
			</tr>			
		{{/for}}
		<table>
    {{/if}}
{{/if}}
 